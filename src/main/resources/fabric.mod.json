{
  "schemaVersion": 1,
  "id": "netherite",
  "version": "${version}",

  "name": "Netherite",
  "description": "A Vanilla+ Minecraft Mod aimed to bring a lot of changes to the game.",
  "authors": [
    "Kowagatte"
  ],
  "contact": {
    "homepage": "https://damocles.ca/",
    "sources": "https://https://github.com/Kowagatte/Netherite"
  },

  "license": "MIT",
  "icon": "assets/netherite/icon.png",

  "environment": "*",
  "entrypoints": {
    "main": [
      "ca.damocles.NetheriteKt::init"
    ],
    "client": [
      "ca.damocles.client.ClientEntryKt::init"
    ],
    "modmenu": [
      "ca.damocles.NetheriteModMenuIntegration"
    ]
  },
  "mixins": [
    "netherite.mixins.json"
  ],
  "depends": {
    "fabricloader": ">=0.8.7",
